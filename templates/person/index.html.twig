{% extends 'layout.html.twig' %}

{% block title %}Persons list!{% endblock %}

{% block body %}
<div class="alert alert-info">Liste des personnes</div>

    <ol class="list-group">
        {% for person in persons %}
            <li class="list-group-item list-group-item-{% if loop.index is even%}primary{% else %}secondary{% endif%} ">
                {{ person.firstname }} {{ person.name }} a {{ person.age }} ans
                <a href="{{ path('app_remove_person', {id: person.id}) }}">X</a>
            </li>
        {% endfor %}
    </ol>
{% endblock %}
